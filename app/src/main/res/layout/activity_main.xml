<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/question_textview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_background"
        android:text="How many bones are in an adult Human Body?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/answer1_textview"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/question_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#f9cb9c"
        android:text="206 Bones"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35sp"
        android:paddingTop="5dp"
                                                        />

    <TextView
        android:id="@+id/answer2_textview"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/answer1_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#f9cb9c"
        android:text="300 Bones"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35sp"
        android:paddingTop="5dp"
        />

    <TextView
        android:id="@+id/answer3_textview"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/answer2_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#f9cb9c"
        android:text="350 Bones"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35sp"
        android:paddingTop="5dp"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/open_eye"
        android:src="@drawable/open_eye"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"

         />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/closed_eye"
        android:src="@drawable/closed_eye"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        />





</androidx.constraintlayout.widget.ConstraintLayout>